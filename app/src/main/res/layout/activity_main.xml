<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layeredbllue"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cloud"></ImageView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dirtground"
        android:padding="0dp">


    </ImageView>
</RelativeLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/MenuTitle"
            android:paddingTop="10dp"
            android:layout_width="700sp"
            android:layout_height="121dp"
            android:fontFamily="@font/play"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="@string/game_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:autoSizeTextType="uniform" />
        <GridLayout
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:paddingLeft="100dp">
            <TextView
            android:id="@+id/MenusubTitle"
            android:layout_width="203dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/play"
            android:paddingTop="10dp"
            android:text="@string/subtitle"

            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            app:autoSizeTextType="uniform" />
        <TextView
            android:id="@+id/highScore"
            android:layout_width="203dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/play"
            android:paddingTop="10dp"
            android:text="@string/highScore"

            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            app:autoSizeTextType="uniform" />
    </GridLayout>
        <GridLayout
    android:layout_width="match_parent"
    android:layout_height="250dp"

    android:layout_gravity="center">
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/bunnybasesprite">

    </ImageView>

    <Button
        android:id="@+id/Start"
        android:layout_width="229dp"
        android:layout_height="115dp"
        android:layout_row="0"
        android:layout_column="1"

        app:autoSizeTextType="uniform"
        android:layout_gravity="center"
        android:text="Start"
        android:textFontWeight="99" />

    <ImageView
        android:layout_width="202dp"
        android:layout_height="match_parent"

        android:src="@drawable/carrot">

    </ImageView>
    </GridLayout>
    </GridLayout>

</RelativeLayout>